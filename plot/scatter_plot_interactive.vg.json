{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 700,
  "height": 450,
  "title": "World Happiness Score (2019)",
  "data": {
    "url": "https://raw.githubusercontent.com/mariafun/interactive_chart/main/data/2019.csv"
  },
  "params": [
    {
      "name": "Life_expectancy_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1.1,
        "step": 0.01,
        "name": "Minimum Life Expectancy: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Happiness_Score > 0"},
    {"filter": "datum.GDP_per_capita > 0"},
    {"filter": "datum.Healthy_life_expectancy > Life_expectancy_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {"calculate": "datum.Country_or_region", "as": "Country"},
    {
      "calculate": "datum.Healthy_life_expectancy",
      "as": "Healthy life expectancy"
    },
    {"calculate": "datum.Happiness_Score", "as": "Happiness Score"},
    {"calculate": "datum.GDP_per_capita", "as": "GDP per capita"}
  ],
  "encoding": {
    "x": {
      "field": "GDP_per_capita",
      "type": "quantitative",
      "title": "GDP per capita",
      "axis": {"tickCount": 3},
      "scale": {"type": "linear", "domain": [0, 1.8]}
    },
    "y": {
      "field": "Happiness_Score",
      "type": "quantitative",
      "title": "Happiness Score",
      "axis": {"tickCount": 1},
      "scale": {"type": "linear", "domain": [2, 8.5]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Healthy_life_expectancy",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.1, 0.3, 0.5, 0.7, 0.9, 1.1],
            "range": [10, 50, 100, 200, 300, 600, 900]
          },
          "legend": {"format": "0.1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#9b5de5",
              "#f15bb5",
              "#fee440",
              "#00bbf9",
              "#00f5d4",
              "#fb8b24"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Happiness Score", "type": "quantitative", "format": ","},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {
            "field": "Healthy life expectancy",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Generosity", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country_or_region", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country_or_region'] == 'China' || datum['Country_or_region'] == 'Singapore' || datum['Country_or_region'] == 'Australia' || datum['Country_or_region'] == 'New Zealand' || datum['Country_or_region'] == 'Italy' || datum['Country_or_region'] == 'Yemen' ||  datum['Country_or_region'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Happiness Score", "type": "quantitative", "format": ","},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {
            "field": "Healthy life expectancy",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Generosity", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}
